rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permitir lectura/escritura a todos los usuarios autenticados (más permisivo)
    // Esto es temporal hasta que App Check esté configurado correctamente
    match /images/{chatId}/{imageId} {
      allow read, write: if request.auth != null;
    }

    // Imágenes de perfil de usuario (mantenemos restricciones existentes)
    match /profile_images/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
                    && request.resource.size < 2 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }

    // Denegar acceso por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
